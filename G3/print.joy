(* str x y effect *)
print == rollup gotoxy [] [colred] [] ifte swap putchars [] [colwhite] [] ifte
	 pop;

(* printbox - either print a box or only a horizontal line *)
(* xh yh xl yl *)
printbox ==
3 pick 3 pick gotoxy
[1 =] [horizontal] [box] ifte
4 [pop] times;
